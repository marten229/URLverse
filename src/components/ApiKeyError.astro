<style>
    .api-key-error-container {
        padding: 2rem;
        font-family: Arial, sans-serif;
        max-width: 600px;
        margin: 2rem auto;
        text-align: center;
    }

    .error-card {
        background: #fff3cd;
        border: 1px solid #ffeaa7;
        border-radius: 8px;
        padding: 2rem;
        margin-bottom: 2rem;
    }

    .icon {
        font-size: 3rem;
        margin-bottom: 1rem;
    }

    .error-title {
        color: #856404;
        margin: 0 0 1rem 0;
        font-size: 2em; /* Ensure consistent heading size */
        font-weight: bold;
    }

    .error-message {
        color: #856404;
        margin: 0 0 1.5rem 0;
    }

    .error-hint {
        color: #666;
        font-size: 0.9rem;
        margin-bottom: 2rem;
    }

    .action-buttons {
        display: flex;
        gap: 1rem;
        justify-content: center;
        flex-wrap: wrap;
    }

    .home-button {
        display: inline-block;
        padding: 0.75rem 1.5rem;
        background: #667eea;
        color: white;
        text-decoration: none;
        border-radius: 6px;
        font-weight: 500;
        transition: background 0.2s ease;
    }

    .home-button:hover {
        background: #5a67d8;
    }

    .help-section {
        text-align: left;
        background: #f8f9fa;
        border-radius: 8px;
        padding: 1rem;
    }

    .help-summary {
        cursor: pointer;
        font-weight: 600;
        color: #667eea;
        margin-bottom: 1rem;
    }

    .help-list {
        margin: 0;
        padding-left: 1.5rem;
        color: #666;
        line-height: 1.6;
    }

    .help-list a {
        color: #667eea;
    }
</style>
